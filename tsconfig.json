{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": false,
				"strictNullChecks": true,
				"alwaysStrict": true, 
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/",
        "sourceMap": true,
				"target": "ES2015"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}